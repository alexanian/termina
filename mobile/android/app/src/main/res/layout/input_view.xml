<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/input_header"
                style="@style/Termina.Text.Title.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_header"/>

            <TextView
                android:id="@+id/input_description"
                style="@style/Termina.Text.Contextual"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_description"/>

            <TextView
                android:id="@+id/input_period_question"
                style="@style/Termina.Text.Question"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_period_question"/>

            <TextView
                android:id="@+id/input_period_details"
                style="@style/Termina.Text.Contextual"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_period_details"/>

            <EditText
                android:id="@+id/last_period_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Select a date range"/>

            <TextView
                android:id="@+id/input_state_question"
                style="@style/Termina.Text.Question"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_state_question"/>

            <Spinner
                android:id="@+id/state_input"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/spinner_min_width"/>

            <TextView
                android:id="@+id/input_age_question"
                style="@style/Termina.Text.Question"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_age_question"/>

            <TextView
                android:id="@+id/input_age_details"
                style="@style/Termina.Text.Contextual"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_age_details"/>

            <EditText
                android:id="@+id/age_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Age"/>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_arrow_forward_white_24dp"/>

</RelativeLayout>