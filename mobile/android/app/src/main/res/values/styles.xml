<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Termina">
    </style>

    <style name="Termina.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Termina.Text.Heading" parent="Termina.Text">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Termina.Text.Title" parent="Termina.Text">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Termina.Text.SubTitle" parent="Termina.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Termina.Text.Question" parent="Termina.Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Termina.Text.Contextual">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Termina.Text.Disclaimer" parent="Termina.Text.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Termina.Text.Card" parent="Termina.Text.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Termina.Text.Card.Medication" parent="Termina.Text.Card">
        <item name="android:textColor">@color/med_green</item>
    </style>

    <style name="Termina.Text.Card.Surgical" parent="Termina.Text.Card">
        <item name="android:textColor">@color/sur_blue</item>
    </style>

    <style name="Termina.Text.Card.Continue" parent="Termina.Text.Card">
        <item name="android:textColor">@color/con_orange</item>
    </style>
</resources>
